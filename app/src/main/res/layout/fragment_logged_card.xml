<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pw.jawedyx.maksi_01.LoggedCardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/qr_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/qr"
                    android:layout_marginTop="20dp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/qr"
                    android:layout_below="@+id/qr_logo"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/qr_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13371337"
                    android:layout_below="@+id/qr"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qr_about"
            android:id="@+id/qr_about"
            android:layout_below="@+id/view"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />


    </RelativeLayout>


</FrameLayout>
